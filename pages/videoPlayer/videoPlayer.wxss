/* pages/videoPlayer/videoPlayer.wxss */
page {
    background-color: #fbfbfb;
    overflow: hidden;
}

video {
    width: 100%;
    height: 35vh;
}

.card {
    margin: 20rpx;
    padding: 20rpx;
    background-color: white;
    border-radius: 20rpx;
    border: 1rpx solid #eee;
    box-sizing: border-box;
}

.creator {
    position: relative;
    display: flex;
    align-items: center;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 25rpx 0 15rpx;
}

.nickName {
    font-size: 28rpx;
}

.videoInfo {
    margin: 20rpx 20rpx 0;
}

.title {
    font-size: 28rpx;
}

.desp {
    margin-top: 15rpx;
    color: #bbb;
    font-size: 25rpx;
}

.btn{
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    padding:0;
    background-color: #fff;
    text-align: center;
    width: 50rpx!important;
}